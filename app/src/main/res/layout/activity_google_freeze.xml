<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleFreeze">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/google_image1"
        app:layout_constraintTop_toTopOf="@id/google_button1"
        app:layout_constraintBottom_toBottomOf="@id/google_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:src="@drawable/google_gms"
        />
    <TextView
        android:id="@+id/google_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谷歌服务"
        app:layout_constraintTop_toTopOf="@id/google_button1"
        app:layout_constraintBottom_toBottomOf="@id/google_button1"
        app:layout_constraintLeft_toRightOf="@id/google_image1"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/google_button1"
        app:layout_constraintRight_toLeftOf="@id/google_button2"
        app:layout_constraintTop_toTopOf="parent"
        android:text="冻结"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/google_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解冻"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/google_button1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="文本一"
        android:id="@+id/google_description1"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/google_image2"
        app:layout_constraintTop_toTopOf="@id/google_button3"
        app:layout_constraintBottom_toBottomOf="@id/google_button3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:src="@drawable/google_3ap"
        />
    <TextView
        android:id="@+id/google_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谷歌三件套"
        app:layout_constraintTop_toTopOf="@id/google_button3"
        app:layout_constraintBottom_toBottomOf="@id/google_button3"
        app:layout_constraintLeft_toRightOf="@id/google_image2"
        android:layout_marginStart="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/google_button3"
        app:layout_constraintRight_toLeftOf="@id/google_button4"
        app:layout_constraintTop_toBottomOf="@id/google_description1"
        android:text="冻结"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/google_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解冻"
        app:layout_constraintTop_toBottomOf="@id/google_description1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/google_button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="文本二"
        android:id="@+id/google_description2"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/google_image3"
        app:layout_constraintTop_toTopOf="@id/google_button5"
        app:layout_constraintBottom_toBottomOf="@id/google_button5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:src="@drawable/google_all"
        />
    <TextView
        android:id="@+id/google_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谷歌全家桶"
        app:layout_constraintTop_toTopOf="@id/google_button5"
        app:layout_constraintBottom_toBottomOf="@id/google_button5"
        app:layout_constraintLeft_toRightOf="@id/google_image3"
        android:layout_marginStart="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/google_button5"
        app:layout_constraintRight_toLeftOf="@id/google_button6"
        app:layout_constraintTop_toBottomOf="@id/google_description2"
        android:text="冻结"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/google_button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解冻"
        app:layout_constraintTop_toBottomOf="@id/google_description2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/google_button5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="文本三"
        android:id="@+id/google_description3"
        />
</android.support.constraint.ConstraintLayout>